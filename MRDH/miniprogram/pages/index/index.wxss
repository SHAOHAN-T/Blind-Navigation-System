/* Home page styles - Design specification optimization */

/* Welcome section */
.welcome-section {
  margin-bottom: 40rpx;
}

.welcome-card {
  background: linear-gradient(to bottom, #2E8BFF 0%, #36D399 100%);
  color: #FFFFFF;
  border: none;
  box-shadow: 0 6rpx 24rpx rgba(46, 139, 255, 0.3);
  border-radius: 12rpx;
}

.welcome-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  display: block;
}

.welcome-title {
  font-size: 56rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.welcome-subtitle {
  font-size: 40rpx;
  font-weight: 400;
  opacity: 0.9;
  margin-bottom: 50rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.main-actions {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  align-items: center;
  margin-top: 20rpx;
}

.btn-extra-large {
  padding: 40rpx 60rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 16rpx;
  min-height: 140rpx;
  width: 90%;
  max-width: 500rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

.btn-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.btn-subtitle {
  font-size: 20rpx;
  opacity: 0.9;
  font-weight: 400;
}

/* Section title - Unified specification */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #1F2937;
}

.section-action {
  font-size: 32rpx;
  color: #2E8BFF;
}

/* Recently used maps - Card design */
.recent-maps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.map-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding: 40rpx;
  transition: all 0.3s ease;
}

.map-item:active {
  transform: scale(1.02);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.map-item-header {
  display: flex;
  align-items: center;
}

.map-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.map-info {
  flex: 1;
}

.map-name {
  font-size: 44rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.map-last-used {
  font-size: 32rpx;
  font-weight: 400;
  color: #6B7280;
}

/* Map grid */
.maps-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx;
}

.map-card {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.map-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.map-card-header {
  text-align: center;
  margin-bottom: 20rpx;
}

.map-card-icon {
  width: 80rpx;
  height: 80rpx;
}

.map-card-content {
  margin-bottom: 25rpx;
}

.map-card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  text-align: center;
  margin-bottom: 15rpx;
}

.map-card-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666666;
}

.map-card-actions {
  text-align: center;
}

/* System status */
.status-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.status-item {
  text-align: center;
}

.status-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #007bff;
  margin-bottom: 8rpx;
}

.status-label {
  font-size: 24rpx;
  color: #666666;
}

.status-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #e9ecef;
}

.system-version {
  font-size: 24rpx;
  color: #666666;
}

.view-detail {
  font-size: 24rpx;
  color: #007bff;
}

/* Quick functions */
.shortcuts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40rpx;
}

.shortcut-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shortcut-item:active {
  background-color: #f0f8ff;
  border-color: #007bff;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 123, 255, 0.15);
}

.shortcut-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.shortcut-label {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  font-weight: 600;
}


/* Responsive design */
@media (max-width: 750rpx) {
  .maps-grid {
    grid-template-columns: 1fr;
  }
  
  .shortcuts-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .status-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 15rpx;
  }
  
  .quick-actions {
    flex-direction: column;
  }
  
  .quick-actions .btn {
    max-width: none;
  }
}
