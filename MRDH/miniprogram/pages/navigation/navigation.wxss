/* Responsive design */
@media (max-width: 750rpx) {
  .room-card {
    width: 120rpx;
  }
  
  .map-container {
    margin: 10rpx;
    padding: 10rpx; /* üîß Further reduce padding on small screens to provide more space for 3D maps */
    /* Ensure mobile scrolling experience */
    -webkit-overflow-scrolling: touch;
    /* üîß Additional optimization for small screens */
    min-height: 350rpx; /* Ensure minimum scrolling height */
  }
  
  .map-grid {
    /* Maintain responsiveness on small screens */
  }
  
  .instructions-section {
    height: auto; /* üîß Use adaptive height on small screens */
    max-height: 400rpx; /* üîß Increase maximum height for small screens */
    min-height: 250rpx; /* üîß Increase minimum height for small screens */
  }

  /* üîß Room list optimization for small screens */
  .rooms-section {
    padding-bottom: 80rpx; /* üîß Add more bottom padding on small screens */
    max-height: 280rpx; /* üîß Adjust maximum height on small screens */
  }

  
  /* üîß Adjust map area height calculation on small screens */
  .map-section.with-navigation {
    height: calc(100vh - 480rpx); /* Calculation after removing control buttons and increasing instruction area height */
    max-height: calc(100vh - 480rpx);
    /* üîß Ensure 3D map has sufficient space on small screens */
    min-height: 350rpx;
  }

  /* üîß Map area without navigation status on small screens */
  .map-section.without-navigation {
    /* üîß Reserve more space for room selection area on small screens */
    height: calc(100vh - 380rpx);
    max-height: calc(100vh - 380rpx);
    min-height: 350rpx;
  }

  /* üîß 3D map specific optimization on small screens */
  .map-3d-flat {
    padding: 20rpx 30rpx 30rpx 20rpx; /* Reduce padding on small screens */
  }
}

