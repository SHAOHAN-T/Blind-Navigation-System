/* 3D map flat grid styles */
.map-3d-flat {
  background: #f8f9fa;
  border-radius: 0 0 12rpx 12rpx;
  /* üîß Ensure 3D map flat grid has correct dimensions to support scrolling */
  width: max-content;
  height: max-content;
  min-width: 100%;
  min-height: 100%;
  /* üîß Add padding to ensure content is not truncated by borders */
  padding: 30rpx 50rpx 50rpx 30rpx;
  box-sizing: border-box;
  /* üîß Ensure map grid displays completely, especially bottom right corner */
  position: relative;
  /* üîß Add extra scrolling margin */
  scroll-margin: 20rpx;
}

.map-3d-flat .map-cell {
  border: 1rpx solid #e9ecef;
  transition: all 0.2s ease;
  /* üîß Ensure cell content displays completely */
  box-sizing: border-box;
  position: relative;
}

.map-3d-flat .map-cell:hover {
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-1rpx);
}

.map-3d-scene {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transform-style: preserve-3d; /* Preserve 3D transform */
  /* üîÑ Drag gesture support */
  cursor: grab;
  touch-action: none; /* Disable default touch behavior */
  user-select: none; /* Disable text selection */
}

.map-3d-scene:active {
  cursor: grabbing;
}

.map-3d-world {
  transform-style: preserve-3d;
  /* transform is now dynamically controlled through inline styles */
}

.map-3d-grid {
  display: grid;
  gap: 2rpx;
  transform-style: preserve-3d;
  padding: 20rpx;
}

.map-3d-cell {
  position: relative;
  width: var(--cell-size, 40rpx);
  height: var(--cell-size, 40rpx);
  transform-style: preserve-3d;
  cursor: pointer;
  transition: transform 0.3s ease;
}

.map-3d-cell:hover {
  transform: translateZ(10rpx);
}

/* Cube styles */
.cube {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transform: translateZ(calc(var(--cell-height) / 2));
}

.cube-face {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: inset 0 0 10rpx rgba(0, 0, 0, 0.2);
}

.cube-top {
  height: var(--cell-height, 20rpx);
  transform: rotateX(90deg) translateZ(calc(var(--cell-height) / 2));
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1);
}

.cube-bottom {
  height: var(--cell-height, 20rpx);
  transform: rotateX(-90deg) translateZ(calc(var(--cell-height) / -2));
}

.cube-front {
  height: var(--cell-height, 20rpx);
  transform: translateZ(calc(var(--cell-size, 40rpx) / 2));
}

.cube-back {
  height: var(--cell-height, 20rpx);
  transform: translateZ(calc(var(--cell-size, 40rpx) / -2)) rotateY(180deg);
}

.cube-right {
  height: var(--cell-height, 20rpx);
  transform: rotateY(90deg) translateZ(calc(var(--cell-size, 40rpx) / 2));
}

.cube-left {
  height: var(--cell-height, 20rpx);
  transform: rotateY(-90deg) translateZ(calc(var(--cell-size, 40rpx) / 2));
}

/* 3D styles for different cell types */
.map-3d-cell.cell-empty {
  --cell-height: 5rpx;
  --cell-color: #2a2a4e;
}

.map-3d-cell.cell-obstacle {
  --cell-height: 60rpx;
  --cell-color: #8b5a2b;
}

.map-3d-cell.cell-obstacle .cube-top {
  background: linear-gradient(135deg, #cd853f 0%, #8b5a2b 100%);
  box-shadow: 0 0 30rpx rgba(205, 133, 63, 0.3);
}

.map-3d-cell.cell-entrance {
  --cell-height: 40rpx;
  --cell-color: #32cd32;
}

.map-3d-cell.cell-entrance .cube-top {
  background: linear-gradient(135deg, #32cd32 0%, #228b22 100%);
  box-shadow: 0 0 40rpx rgba(50, 205, 50, 0.5);
  animation: pulse-entrance 2s infinite;
}

.map-3d-cell.cell-room {
  --cell-height: 45rpx;
  --cell-color: #4169e1;
}

.map-3d-cell.cell-room .cube-top {
  background: linear-gradient(135deg, #4169e1 0%, #1e90ff 100%);
  box-shadow: 0 0 30rpx rgba(65, 105, 225, 0.4);
}

.map-3d-cell.cell-current {
  --cell-height: 50rpx;
  --cell-color: #ff6b6b;
}

.map-3d-cell.cell-current .cube {
  animation: pulse-current-3d 1.5s infinite;
}

.map-3d-cell.cell-current .cube-top {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
  box-shadow: 0 0 50rpx rgba(255, 107, 107, 0.7);
}

.map-3d-cell.cell-target {
  --cell-height: 50rpx;
  --cell-color: #ffd700;
}

.map-3d-cell.cell-target .cube {
  animation: pulse-target-3d 1.2s infinite;
}

.map-3d-cell.cell-target .cube-top {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  box-shadow: 0 0 50rpx rgba(255, 215, 0, 0.8);
}

.map-3d-cell.cell-path {
  --cell-height: 25rpx;
  --cell-color: #00bcd4;
}

.map-3d-cell.cell-path .cube-top {
  background: linear-gradient(135deg, #00bcd4 0%, #00acc1 100%);
  box-shadow: 0 0 20rpx rgba(0, 188, 212, 0.4);
}

.map-3d-cell.cell-connection {
  --cell-height: 55rpx;
  --cell-color: #9c27b0;
}

.map-3d-cell.cell-connection .cube-top {
  background: linear-gradient(135deg, #9c27b0 0%, #7b1fa2 100%);
  box-shadow: 0 0 35rpx rgba(156, 39, 176, 0.6);
  animation: pulse-connection-3d 1.8s infinite;
}

/* 3D label styles */
.cell-3d-label {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  white-space: nowrap;
  z-index: 100;
  pointer-events: none;
  backdrop-filter: blur(5rpx);
}

/* 3D control panel */
.map-3d-controls {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 12rpx;
  padding: 15rpx;
  backdrop-filter: blur(10rpx);
  max-width: 200rpx;
}

/* üîß Floor selector styles */
.floor-selector-3d {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.floor-label {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
}

.floor-buttons {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.floor-btn {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  padding: 8rpx 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  min-height: 50rpx;
}

.floor-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.floor-btn:active {
  transform: scale(0.95);
}

/* üîÑ Reset view button */
.reset-view-btn {
  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
  text-align: center;
  min-height: 60rpx;
}

.reset-view-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.5);
}

/* üí° Drag tips */
.drag-hint {
  text-align: center;
  padding: 8rpx 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.hint-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 20rpx;
  font-weight: 400;
}

/* 3D animation effects */
@keyframes pulse-entrance {
  0%, 100% { 
    box-shadow: 0 0 40rpx rgba(50, 205, 50, 0.5);
  }
  50% { 
    box-shadow: 0 0 60rpx rgba(50, 205, 50, 0.8);
  }
}

@keyframes pulse-current-3d {
  0%, 100% { 
    transform: translateZ(calc(var(--cell-height) / 2)) scale(1);
  }
  50% { 
    transform: translateZ(calc(var(--cell-height) / 2 + 10rpx)) scale(1.1);
  }
}

@keyframes pulse-target-3d {
  0%, 100% { 
    transform: translateZ(calc(var(--cell-height) / 2)) rotateY(0deg);
  }
  50% { 
    transform: translateZ(calc(var(--cell-height) / 2 + 15rpx)) rotateY(180deg);
  }
}

@keyframes pulse-connection-3d {
  0%, 100% { 
    transform: translateZ(calc(var(--cell-height) / 2)) rotateX(0deg);
    box-shadow: 0 0 35rpx rgba(156, 39, 176, 0.6);
  }
  50% { 
    transform: translateZ(calc(var(--cell-height) / 2 + 12rpx)) rotateX(10deg);
    box-shadow: 0 0 50rpx rgba(156, 39, 176, 0.9);
  }
}

/* 3D mode placeholder styles */
.map-3d-placeholder {
  width: 100%;
  height: 600rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ccc;
  margin: 20rpx 0;
}

.placeholder-content {
  text-align: center;
  padding: 40rpx;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.placeholder-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.placeholder-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.placeholder-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.placeholder-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.placeholder-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}
