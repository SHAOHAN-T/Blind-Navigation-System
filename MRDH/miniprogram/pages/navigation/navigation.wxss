/* Navigation page styles */

.navigation-container {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.navigation-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* Prevent content overflow */
  position: relative;
  height: 100vh; /* üîß Precisely control height to viewport height */
  max-height: 100vh; /* üîß Prevent exceeding viewport */
}

/* Navigation status bar */
.navigation-status {
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: #ffffff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
}

.status-progress {
  font-size: 26rpx;
  opacity: 0.9;
}

/* Map area */
.map-section {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  min-height: 400rpx;
  flex-shrink: 0; /* Prevent compression */
  overflow: hidden; /* Ensure no overflow */
}

/* üîß Map area with navigation status */
.map-section.with-navigation {
  /* Precise calculation: 100vh - status bar 80rpx - instruction area 400rpx - margin 50rpx */
  height: calc(100vh - 530rpx);
  max-height: calc(100vh - 530rpx);
  /* üîß Ensure 3D map has sufficient scrolling space */
  min-height: 400rpx;
}

/* üîß Map area without navigation status */
.map-section.without-navigation {
  /* üîß Reserve space for room selection area: 100vh - status bar 80rpx - room area 300rpx - margin 50rpx */
  height: calc(100vh - 430rpx);
  max-height: calc(100vh - 430rpx);
  /* üîß Ensure map has minimum height */
  min-height: 400rpx;
}

.map-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e9ecef;
  background-color: #f8f9fa;
}

.map-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.map-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.zoom-info {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: rgba(46, 139, 255, 0.1);
  border-radius: 20rpx;
}

.zoom-text {
  font-size: 24rpx;
  color: #2E8BFF;
  font-weight: 500;
}

/* Map type indicator */
.map-type-indicator {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.map-type-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 3D map view */
.map-3d-view {
  flex: 1;
  height: 100%;
  min-height: 500rpx;
  max-height: 60vh;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin: 20rpx;
}

/* üîß 2D map wrapper */
.map-wrapper {
  position: relative;
  flex: 1; /* Occupy all remaining space in the map area */
  background-color: #F5F7FA;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 300rpx;
  /* üîß Make full use of the available space in the map area */
  height: 100%; /* Fill parent container */
  max-height: none; /* Remove height restriction, controlled by parent container */
  overflow: hidden; /* Prevent content overflow wrapper */
}

.map-container {
  width: 100%;
  height: 100%; /* Fill wrapper */
  padding: 20rpx;
  /* üîß Ensure scrolling behavior, especially support large maps */
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
  /* üîß Remove height restrictions, allow large maps to display completely */
  box-sizing: border-box; /* Size calculation including padding */
  /* üîß Ensure scroll container can correctly display all content */
  display: flex;
  flex-direction: column;
  /* üîß Provide sufficient scrolling space for 3D maps */
  min-height: 0; /* Allow flex items to shrink */
}

.map-grid {
  display: grid;
  gap: 2rpx;
  background-color: #cccccc;
  padding: 4rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  /* üîß Make map adaptive to actual content size, support complete display of large maps */
  width: max-content; /* Automatically calculate width based on number of cells and cellSize */
  height: max-content; /* Automatically calculate height based on number of cells and cellSize */
  /* üîß Ensure minimum size, but do not limit maximum size to support large maps */
  min-width: 300rpx; /* Reduce minimum width to allow small maps to display normally */
  min-height: 200rpx; /* Reduce minimum height to allow small maps to display normally */
}

/* üîß 2D map zoom controls - positioned relative to wrapper */
.map-zoom-controls {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 12rpx 18rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 100; /* üîß Increase z-index to ensure top layer */
  backdrop-filter: blur(10rpx); /* üîß Add frosted glass effect */
}

.zoom-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #007bff;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 123, 255, 0.3);
  transition: all 0.2s ease;
}

.zoom-btn:active {
  background-color: #0056b3;
  transform: scale(0.92);
  box-shadow: 0 1rpx 3rpx rgba(0, 123, 255, 0.5);
}

.zoom-display {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin: 0 8rpx;
  min-width: 80rpx;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.map-cell {
  position: relative;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: 700;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.cell-empty {
  background-color: #ffffff;
  border: 1rpx solid #f0f0f0;
}

.cell-obstacle {
  background-color: #2d3436;
  box-shadow: inset 0 0 4rpx rgba(0, 0, 0, 0.3);
}

.cell-entrance {
  background-color: #00b894;
  color: #ffffff;
  box-shadow: 0 0 8rpx rgba(0, 184, 148, 0.4);
}

.cell-room {
  background-color: #0984e3;
  color: #ffffff;
  box-shadow: 0 0 8rpx rgba(9, 132, 227, 0.4);
}

.cell-path {
  background-color: #fdcb6e;
  animation: pulse-path 2s infinite;
}

.cell-connection {
  background-color: #ffc107 !important;
  color: #000 !important;
  border: 3rpx solid #e0a800 !important;
  animation: pulse-connection 1.5s infinite;
  font-weight: bold;
  box-shadow: 0 0 12rpx rgba(255, 193, 7, 0.6);
}

.cell-current {
  background-color: #e17055;
  color: #ffffff;
  animation: pulse-current 1.5s infinite;
  box-shadow: 0 0 12rpx rgba(225, 112, 85, 0.6);
}

.cell-target {
  background-color: #a29bfe;
  color: #ffffff;
  animation: pulse-target 2s infinite;
  box-shadow: 0 0 12rpx rgba(162, 155, 254, 0.6);
}

@keyframes pulse-path {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

@keyframes pulse-current {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

@keyframes pulse-target {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes pulse-connection {
  0%, 100% { 
    opacity: 1; 
    transform: scale(1); 
  }
  50% { 
    opacity: 0.8; 
    transform: scale(1.1); 
  }
}

