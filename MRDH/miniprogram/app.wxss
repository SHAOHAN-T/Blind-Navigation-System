/* Global styles - based on design specifications */

/* Reset styles */
page {
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 16px;
  line-height: 1.6;
  color: #1F2937;
}

/* CSS variable definitions - design system colors */
:root {
  --color-primary: #2E8BFF;
  --color-primary-hover: #4AA3FF;
  --color-secondary-1: #FF9F43;
  --color-secondary-2: #36D399;
  --color-neutral-1: #F5F7FA;
  --color-neutral-2: #E5E7EB;
  --color-text-primary: #1F2937;
  --color-text-secondary: #6B7280;
  --color-white: #FFFFFF;
}

/* Layout containers */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #F5F7FA;
}

.section {
  margin-bottom: 30rpx;
}

/* Card styles - unified design specifications */
.card {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx) scale(1.02);
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
  background-color: #f8f9fa;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin: 0;
}

.card-body {
  padding: 30rpx;
}

.card-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e9ecef;
  background-color: #f8f9fa;
}

/* Button styles - unified design specifications */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
  margin: 10rpx;
  min-height: 88rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn:active {
  transform: scale(0.98);
}

.btn-primary {
  background: linear-gradient(to right, #2E8BFF, #4AA3FF);
  color: #FFFFFF;
  border: none;
}

.btn-primary:active {
  background: linear-gradient(to right, #1c7aef, #3398ff);
  box-shadow: 0 4rpx 12rpx rgba(46, 139, 255, 0.3);
}

.btn-success {
  background: linear-gradient(to right, #36D399, #2ABF88);
  color: #FFFFFF;
  border: none;
}

.btn-success:active {
  background: linear-gradient(to right, #2bc287, #24a876);
  box-shadow: 0 4rpx 12rpx rgba(54, 211, 153, 0.3);
}

.btn-warning {
  background: linear-gradient(to right, #FF9F43, #FF8A27);
  color: #FFFFFF;
  border: none;
}

.btn-warning:active {
  background: linear-gradient(to right, #ff8a27, #ff7b0f);
  box-shadow: 0 4rpx 12rpx rgba(255, 159, 67, 0.3);
}

.btn-danger {
  background: linear-gradient(to right, #EF4444, #DC2626);
  color: #FFFFFF;
  border: none;
}

.btn-danger:active {
  background: linear-gradient(to right, #dc2626, #b91c1c);
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.btn-outline-primary {
  background-color: transparent;
  color: #2E8BFF;
  border: 1rpx solid #2E8BFF;
}

.btn-outline-primary:active {
  background-color: #2E8BFF;
  color: #FFFFFF;
  border-color: #2E8BFF;
}

.btn-large {
  padding: 30rpx 60rpx;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 16rpx;
  min-height: 100rpx;
}

.btn-small {
  padding: 18rpx 32rpx;
  font-size: 16rpx;
  font-weight: 400;
  min-height: 70rpx;
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-disabled,
.btn[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
  background: #f8f9fa !important;
  color: #6c757d !important;
  border-color: #e9ecef !important;
}

/* Icons - text alignment */
.icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  display: block;
  vertical-align: middle;
}

.icon-large {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.icon-small {
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
}

/* List styles */
.list {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f9fa;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 26rpx;
  color: #666666;
}

.list-item-action {
  margin-left: 20rpx;
}

/* Form styles - unified design specifications */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  padding: 25rpx;
  border: 1rpx solid #E5E7EB;
  border-radius: 12rpx;
  font-size: 20rpx;
  background-color: #FFFFFF;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #2E8BFF;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(46, 139, 255, 0.1);
}

/* Divider */
.divider {
  height: 2rpx;
  background-color: #E5E7EB;
  margin: 30rpx 0;
}

.form-textarea {
  min-height: 120rpx;
  resize: vertical;
}

/* Switch styles */
.switch-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #333333;
}

/* Status styles */
.status-active {
  color: #28a745;
}

.status-inactive {
  color: #6c757d;
}

.status-warning {
  color: #ffc107;
}

.status-error {
  color: #dc3545;
}

/* Badge styles */
.badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
}

.badge-primary {
  background-color: #007bff;
  color: #ffffff;
}

.badge-success {
  background-color: #28a745;
  color: #ffffff;
}

.badge-warning {
  background-color: #ffc107;
  color: #212529;
}

.badge-danger {
  background-color: #dc3545;
  color: #ffffff;
}

/* Loading styles */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  min-height: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e9ecef;
  border-top: 4rpx solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

/* Empty state styles */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-state-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  opacity: 0.5;
  display: block;
}

.empty-state-title {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-state-subtitle {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.5;
}

/* Error state styles */
.error-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background-color: #fff5f5;
  border-radius: 16rpx;
  border: 1rpx solid #fed7d7;
}

.error-state-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  display: block;
}

.error-state-title {
  font-size: 32rpx;
  color: #e53e3e;
  margin-bottom: 15rpx;
  font-weight: 600;
}

.error-state-subtitle {
  font-size: 26rpx;
  color: #c53030;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

/* Success state styles */
.success-state {
  text-align: center;
  padding: 40rpx;
  background-color: #f0fff4;
  border-radius: 16rpx;
  border: 1rpx solid #9ae6b4;
  margin: 20rpx 0;
}

.success-state-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 20rpx;
  display: block;
}

.success-state-text {
  font-size: 28rpx;
  color: #2f855a;
  font-weight: 500;
}

/* Notification styles */
.notification {
  padding: 25rpx 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  border-left: 4rpx solid;
}

.notification-info {
  background-color: #ebf8ff;
  border-color: #3182ce;
  color: #2c5282;
}

.notification-warning {
  background-color: #fffbeb;
  border-color: #d69e2e;
  color: #975a16;
}

.notification-error {
  background-color: #fed7d7;
  border-color: #e53e3e;
  color: #c53030;
}

.notification-success {
  background-color: #f0fff4;
  border-color: #38a169;
  color: #2f855a;
}

/* Map-related styles */
.map-container {
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.map-grid {
  display: grid;
  gap: 1rpx;
  background-color: #e9ecef;
  padding: 1rpx;
}

.map-cell {
  aspect-ratio: 1;
  min-width: 20rpx;
  min-height: 20rpx;
}

.cell-empty {
  background-color: #ffffff;
}

.cell-obstacle {
  background-color: #333333;
}

.cell-entrance {
  background-color: #28a745;
}

.cell-room {
  background-color: #007bff;
}

.cell-path {
  background-color: #ffc107;
}

.cell-current {
  background-color: #dc3545;
}

/* Navigation-related styles */
.navigation-status {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: #ffffff;
  padding: 20rpx;
  text-align: center;
  z-index: 1000;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.instruction-card {
  background-color: #e3f2fd;
  border-left: 8rpx solid #007bff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 0 12rpx 12rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.instruction-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.instruction-detail {
  font-size: 26rpx;
  color: #666666;
}

/* Voice control styles */
.voice-control {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #28a745, #20c997);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(40, 167, 69, 0.3);
  z-index: 999;
  transition: all 0.3s ease;
}

.voice-control:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.4);
}

.voice-control-icon {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}

/* Accessibility design */
.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.high-contrast {
  filter: contrast(1.5);
}

.large-text {
  font-size: 120%;
}

/* Responsive design */
@media (max-width: 768rpx) {
  .container {
    padding: 15rpx;
  }
  
  .card-body {
    padding: 20rpx;
  }
  
  .btn {
    padding: 20rpx 36rpx;
    font-size: 28rpx;
  }
  
  .btn-large {
    padding: 28rpx 50rpx;
    font-size: 30rpx;
  }
}

/* Utility classes */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.align-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.hidden {
  display: none;
}

.visible {
  display: block;
}

.opacity-50 {
  opacity: 0.5;
}

.opacity-75 {
  opacity: 0.75;
}

.transition-all {
  transition: all 0.3s ease;
}

/* Animation effects */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(30rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.pulse {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { 
    opacity: 1;
    transform: scale(1);
  }
  50% { 
    opacity: 0.8;
    transform: scale(1.02);
  }
}